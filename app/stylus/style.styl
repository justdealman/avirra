// Fonts

@import './mixins/fonts.styl'
webfont('Idealist', 'idealist-regular', normal)
webfont('RoadRadio', 'roadradio-regular', normal)
webfont('RoadRadio', 'roadradio-bold', bold)
webfont('RoadRadio', 'roadradio-thin', 200)
webfont('RoadRadio', 'roadradio-light', 300)
webfont('Segoe UI', 'segoeui-regular', normal)

// Variables

colorDark = #4f4f4f
colorBlue = #55afed
f-arial = 'Arial', sans-serif
f-idealist = 'Idealist', sans-serif
f-roadradio = 'RoadRadio', sans-serif
f-segoe = 'Segoe UI', sans-serif

// Default

html
	height 100%

	*
		max-height 1000000px
		vertical-align top
		box-sizing border-box

	*:before
	*:after
		vertical-align top
		box-sizing border-box

body
	width 100%
	height 100%
	color #000000
	font-size 12px
	line-height 16px
	font-family f-arial
	padding 0
	margin 0
	background #ffffff
	-webkit-tap-highlight-color transparent

p
	text-indent 0
	padding 0
	margin 0 0 16px

table
	margin 0 0 16px
	border-collapse collapse

	td
		padding 0

:focus
	outline none

img
	padding 0
	margin 0
	border 0

a
	color #000000
	text-decoration none

	&:hover
		text-decoration none

form
	margin 0

ul
	margin 0 0 10px 16px
	padding 0

	li
		padding 0
		list-style none

ol
	margin 0 0 10px 18px
	padding 0

	li
		padding 0 0 0 16px

input
select
textarea
	color #000000
	font-size 12px
	font-family f-arial
	padding 0
	margin 0
	background none
	border 0
	box-sizing border-box

textarea
	overflow auto

button
	font-family f-arial
	margin 0
	border 0
	box-sizing border-box

	&::-moz-focus-inner
		padding 0
		border 0

::-webkit-input-placeholder
	color #7a7a7a

:-moz-placeholder
	color #7a7a7a

::-moz-placeholder
	color #7a7a7a

:-ms-input-placeholder
	color #7a7a7a

.img-cover
.img-contain
	display none !important

.wrapper
	overflow-x hidden
	min-height 100%
	padding-top 136px

